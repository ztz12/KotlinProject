<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.SelfViewGroupActivity">

    <com.wanandroid.zhangtianzhu.kotlinproject.view.MyLinearLayout android:layout_width="match_parent"

                                                                   android:layout_height="wrap_content"
                                                                   android:background="#00ff00"
                                                                   android:id="@+id/ml">

        <TextView android:text="第一个VIEW"
                  android:layout_width="wrap_content"
                  android:layout_marginTop="20dp"
                  android:background="@color/colorAccent"
                  android:layout_height="wrap_content"/>

        <TextView android:text="第二个VIEW"
                  android:layout_marginTop="10dp"
                  android:background="@color/colorPrimary"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView android:text="第三个VIEW"
                  android:layout_marginTop="20dp"
                  android:layout_width="wrap_content"
                  android:background="@color/colorPrimaryDark"
                  android:layout_height="wrap_content"/>

    </com.wanandroid.zhangtianzhu.kotlinproject.view.MyLinearLayout>
    <com.wanandroid.zhangtianzhu.kotlinproject.view.FlowLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               app:layout_constraintTop_toBottomOf="@id/ml"
                                                               android:layout_marginTop="30dp"
                                                               android:background="#00ff00"
                                                               android:id="@+id/fl">
        <TextView
                style="@style/text_flag_01"
                android:id="@+id/tv"
                android:background="@color/colorPrimary"
                android:text="Welcome"
                android:textColor="#43BBE7"/>

        <TextView
                style="@style/text_flag_01"
                android:background="@color/colorPrimary"
                android:text="IT工程师"
                android:textColor="#43BBE7"/>

        <TextView
                style="@style/text_flag_01"
                android:background="@color/colorPrimary"
                android:text="我真是可以的"
                android:textColor="#43BBE7"/>

        <TextView
                style="@style/text_flag_01"
                android:background="@color/colorPrimary"
                android:text="你觉得呢"
                android:textColor="#43BBE7"/>

        <TextView
                style="@style/text_flag_01"
                android:background="@color/colorPrimary"
                android:text="不要只知道挣钱"
                android:textColor="#43BBE7"/>

        <TextView
                style="@style/text_flag_01"
                android:background="@color/colorPrimary"
                android:text="努力ing"
                android:textColor="#43BBE7"/>

        <TextView
                style="@style/text_flag_01"
                android:background="@color/colorPrimary"
                android:text="I thick i can"
                android:textColor="#43BBE7"/>
    </com.wanandroid.zhangtianzhu.kotlinproject.view.FlowLayout>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fl"
            android:text="添加图片"
            android:id="@+id/btnAddPic"/>
    <com.wanandroid.zhangtianzhu.kotlinproject.view.WaterfallLayout android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content"
                                                                    app:layout_constraintTop_toBottomOf="@id/btnAddPic"
                                                                    android:id="@+id/waterFall"/>
</androidx.constraintlayout.widget.ConstraintLayout>