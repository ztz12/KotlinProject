<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ClientActivity">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent">

        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="ValueAnimator"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/layerlisttwo"
                android:id="@+id/valueAnimatorTest"/>
        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="ObjectAnimator"
                android:background="@drawable/layerlisttwo"
                app:layout_constraintTop_toBottomOf="@id/valueAnimatorTest"
                android:id="@+id/objectAnimatorTest"/>
        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="GridAnimator"
                android:background="@drawable/layerlisttwo"
                app:layout_constraintTop_toBottomOf="@id/objectAnimatorTest"
                android:id="@+id/gridAnimatorTest"/>
        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="LayoutAnimator"
                android:background="@drawable/layerlisttwo"
                app:layout_constraintTop_toBottomOf="@id/gridAnimatorTest"
                android:id="@+id/layoutAnimatorTest"/>

        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="LayoutTransactionAnimator"
                app:layout_constraintTop_toBottomOf="@id/layoutAnimatorTest"
                android:background="@drawable/layerlisttwo"
                android:id="@+id/layoutTransactionAnimatorTest"/>
        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="ListViewAnimator"
                app:layout_constraintTop_toBottomOf="@id/layoutTransactionAnimatorTest"
                android:background="@drawable/layerlisttwo"
                android:id="@+id/listViewAnimatorTest"/>

        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="心跳"
                app:layout_constraintTop_toBottomOf="@id/listViewAnimatorTest"
                android:background="@drawable/layerlisttwo"
                android:id="@+id/heartTest"/>

        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@drawable/layerlisttwo"
                app:layout_constraintTop_toBottomOf="@id/heartTest"
                android:id="@+id/shapeTest"
                android:text="阴影Demo"/>

        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@drawable/layerlisttwo"
                app:layout_constraintTop_toBottomOf="@id/shapeTest"
                android:id="@+id/bitmapShaderTest"
                android:text="Bitmap 添加阴影"/>

        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@drawable/layerlisttwo"
                android:id="@+id/telescopeTest"
                app:layout_constraintTop_toBottomOf="@id/bitmapShaderTest"
                android:text="望远镜效果"/>

        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@drawable/layerlisttwo"
                android:id="@+id/avatarTest"
                app:layout_constraintTop_toBottomOf="@id/telescopeTest"
                android:text="不规则头像"/>

        <Button android:layout_width="match_parent" android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/avatarTest"
                android:background="@drawable/layerlisttwo"
                android:text="闪动文字"
                android:id="@+id/gradientTest"/>

        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@drawable/layerlisttwo"
                android:text="水波纹效果"
                android:id="@+id/rippleTest"
                app:layout_constraintTop_toBottomOf="@id/gradientTest"/>

        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rippleTest"
                android:background="@drawable/layerlisttwo"
                android:id="@+id/waveTest"
                android:text="贝塞尔曲线绘制双波浪效果"/>

        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@drawable/layerlisttwo"
                android:text="QQ红点拖动删除效果"
                android:id="@+id/redPointTest"
                app:layout_constraintTop_toBottomOf="@id/waveTest"/>

        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@drawable/layerlisttwo"
                android:text="流式布局"
                app:layout_constraintTop_toBottomOf="@id/redPointTest"
                android:id="@+id/flowTest"/>
        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@drawable/layerlisttwo"
                android:text="瀑布流容器"
                app:layout_constraintTop_toBottomOf="@id/flowTest"
                android:id="@+id/waterfallTest"/>

        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@drawable/layerlisttwo"
                android:text="RecyclerView 画廊实现"
                app:layout_constraintTop_toBottomOf="@id/waterfallTest"
                android:id="@+id/galleryTest"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>