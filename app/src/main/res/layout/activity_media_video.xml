<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.MediaVideoActivity">
    <SurfaceView android:layout_width="match_parent" android:layout_height="200dp"
                 android:id="@+id/surfaceView"/>
    <SeekBar android:layout_width="match_parent" android:layout_height="wrap_content"
             android:id="@+id/seekBar"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:id="@+id/btnJump"/>
</LinearLayout>