<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--这里的名字要和自定义的View名称一样，不然在xml布局中无法引用-->
    <declare-styleable name="CircleWaveProgressView">
        <!--波浪的颜色-->
        <attr name="wave_color" format="color"/>
        <!--圆形背景颜色-->
        <attr name="circlebg_color" format="color"/>
        <!--波浪长度-->
        <attr name="wave_length" format="dimension"/>
        <!--波浪高度-->
        <attr name="wave_height" format="dimension"/>
        <!--当前进度-->
        <attr name="currentProgress" format="float"/>
        <!--最大进度-->
        <attr name="maxProgress" format="float"/>
        <!--第二层波浪的颜色-->
        <attr name="second_color" format="color"/>
    </declare-styleable>
    
    <declare-styleable name="ExtractAlphaView">
        <!--src 引用图片资源-->
        <attr name="src" format="reference"/>
        <attr name="shaderColor" format="color"/>
        <attr name="shaderDx" format="integer"/>
        <attr name="shaderDy" format="integer"/>
        <attr name="shaderRadius" format="float"/>
    </declare-styleable>


</resources>